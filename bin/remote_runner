#!/usr/bin/env ruby
require 'lib/host'
require 'lib/runner'

Runner.new do |config|
  config.remote_path = "~/workspace/remote/#{`hostname`.strip}"
  config.local_path = Dir.getwd
  config.hosts = ["elizabeth", "bedford"]
  config.suites = [
    "source ~/.profile; rvm use ree-1.8.7-2010.02@casebook; bundle install; bundle exec spec spec/models/date_strategy/",
    "source ~/.profile; rvm use ree-1.8.7-2010.02@casebook; bundle install; bundle exec spec spec/models/date_strategy/"
  ]
end

$runner.run

